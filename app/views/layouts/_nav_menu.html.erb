<nav class="bg-white border-b border-gray-100">

  <input type="checkbox" id="mobile-menu-toggle" class="peer hidden"/>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">

      <!-- Logo -->
      <div class="flex-shrink-0 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg"
             fill="none"
             viewBox="0 0 24 24"
             stroke-width="1.5"
             stroke="currentColor"
             class="w-6 h-6 text-indigo-600">
          <path stroke-linecap="round" stroke-linejoin="round"
                d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5
                   a2.25 2.25 0 002.25-2.25v-6.75
                   a2.25 2.25 0 00-2.25-2.25H6.75
                   a2.25 2.25 0 00-2.25 2.25v6.75
                   a2.25 2.25 0 002.25 2.25z"/>
        </svg>

        <%= link_to "Password Manager",
                    root_path,
                    class: "text-xl font-bold text-gray-900 tracking-tight hover:text-indigo-600 transition duration-150" %>
      </div>

      <!-- Desktop menu -->
      <ul class="hidden md:flex items-center gap-6">
        <li>
          <%= link_to "Home",
                      root_path,
                      class: "text-sm font-medium text-gray-500 hover:text-gray-900 transition duration-150" %>
        </li>

        <% if user_signed_in? %>
          <li>
            <%= link_to "Profile",
                        edit_user_registration_path,
                        class: "text-sm font-medium text-gray-500 hover:text-gray-900 transition duration-150" %>
          </li>

          <li>
            <%= button_to "Logout",
                          destroy_user_session_path,
                          method: :delete,
                          class: "text-sm font-medium text-gray-500 hover:text-red-600 transition duration-150 bg-transparent border-none cursor-pointer" %>
          </li>
        <% else %>
          <li>
            <%= link_to "Login",
                        new_user_session_path,
                        class: "text-sm font-medium text-gray-500 hover:text-gray-900 transition duration-150" %>
          </li>

          <li>
            <%= link_to "Signup",
                        new_user_registration_path,
                        class: "inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 shadow-sm transition duration-150 ease-in-out" %>
          </li>
        <% end %>
      </ul>

      <!-- Mobile hamburger -->
      <label for="mobile-menu-toggle"
             class="md:hidden cursor-pointer p-2 rounded-md hover:bg-gray-100 z-50">
        <!-- Open -->
        <svg class="peer-checked:hidden w-6 h-6 text-gray-700"
             fill="none"
             viewBox="0 0 24 24"
             stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round"
                d="M4 6h16M4 12h16M4 18h16"/>
        </svg>

        <!-- Close -->
        <svg class="hidden peer-checked:block w-6 h-6 text-gray-700"
             fill="none"
             viewBox="0 0 24 24"
             stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round"
                d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </label>
    </div>
  </div>

  <div
    class="fixed inset-0 z-40 bg-white flex flex-col items-center justify-center
           space-y-6 text-lg
           opacity-0 pointer-events-none
           peer-checked:opacity-100 peer-checked:pointer-events-auto
           transition-opacity duration-300 md:hidden">

    <%= link_to "Home", root_path, class: "text-gray-800 font-medium" %>

    <% if user_signed_in? %>
      <%= link_to "Profile", edit_user_registration_path, class: "text-gray-800 font-medium" %>

      <%= button_to "Logout",
                    destroy_user_session_path,
                    method: :delete,
                    class: "text-red-600 font-medium bg-transparent border-none" %>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: "text-gray-800 font-medium" %>

      <%= link_to "Signup",
                  new_user_registration_path,
                  class: "px-6 py-3 rounded-md bg-indigo-600 text-white font-medium" %>
    <% end %>
  </div>

</nav>
