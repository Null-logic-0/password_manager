<div class="fixed top-16 right-4 z-50 flex flex-col gap-2 w-full max-w-sm">
  <% if notice %>
    <div
      role="alert"
      class="bg-white border-l-4 border-green-500 shadow-lg rounded-r-lg p-4 flex items-center transition-transform transform duration-500 ease-out translate-x-4 opacity-100">
      <span class="text-green-600 font-semibold flex-grow"><%= notice %></span>
    </div>
  <% end %>

  <% if alert %>
    <div
      role="alert"
      class="bg-white border-l-4 border-red-500 shadow-lg rounded-r-lg p-4 flex items-center transition-transform transform duration-500 ease-out translate-x-4 opacity-100">
      <span class="text-red-600 font-semibold flex-grow"><%= alert %></span>
    </div>
  <% end %>
</div>
