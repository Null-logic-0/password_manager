<div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
  <table class="min-w-full divide-y divide-gray-300">
    <thead class="bg-gray-50">
    <tr>
      <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">User</th>
      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Role</th>
      <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
        <span class="sr-only">Actions</span>
      </th>
    </tr>
    </thead>
    <tbody class="divide-y divide-gray-200 bg-white">
    <% password.user_passwords.includes(:user).each do |user_data| %>
      <tr class="group hover:bg-gray-50 transition-colors duration-150">

        <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm sm:pl-6">
          <p class="font-medium text-gray-900"><%= user_data.user.email %></p>
        </td>

        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
          <% if user_data.role == 'owner' || user_data.role == 'admin' %>
              <span class="inline-flex items-center rounded-md bg-purple-50 px-2 py-1 text-xs font-medium text-purple-700 ring-1 ring-inset ring-purple-700/10">
                <%= user_data.role.capitalize %>
              </span>
          <% else %>
               <span class="inline-flex items-center rounded-md bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-700/10">
                 <%= user_data.role.capitalize %>
               </span>
          <% end %>
        </td>

        <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
          <% if user_password.shareable? %>
            <%= button_to password_share_path(password, user_data.user),
                          method: :delete,
                          data: { turbo_confirm: "Remove access for #{user_data.user.email}?" },
                          class: "text-gray-400 hover:text-red-600 transition-colors bg-transparent border-none cursor-pointer p-1 rounded-full hover:bg-red-50",
                          title: "Remove User" do %>

              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0"/>
              </svg>
              <span class="sr-only">Remove</span>
            <% end %>
          <% end %>
        </td>

      </tr>
    <% end %>

    <% if password.user_passwords.empty? %>
      <tr>
        <td colspan="3" class="px-6 py-10 text-center text-sm text-gray-500 bg-gray-50">
          No users shared yet.
        </td>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>